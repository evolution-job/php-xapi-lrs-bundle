{
    "name": "php-xapi/lrs-bundle",
    "type": "symfony-bundle",
    "description": "Experience API (xAPI) Learning Record Store (LRS) based on the Symfony Framework",
    "keywords": [
        "xAPI",
        "Experience API",
        "Tin Can API",
        "LRS",
        "Learning Record Store",
        "Symfony",
        "bundle"
    ],
    "homepage": "https://github.com/php-xapi/lrs-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Flothmann",
            "homepage": "https://github.com/xabbuh"
        },
        {
            "name": "Jérôme Parmentier",
            "homepage": "https://github.com/Lctrs"
        },
        {
            "name": "Entrili",
            "homepage": "https://github.com/evolution-job"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-exception.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-json-test-fixtures.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-model.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-repository-api.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-repository-doctrine.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-repository-doctrine-orm.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-serializer.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-symfony-serializer.git"
        },
        {
            "type": "git",
            "url": "https://github.com/evolution-job/php-xapi-test-fixtures.git"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "doctrine/doctrine-bundle": "^2.9",
        "doctrine/orm": "^3.0",
        "php-xapi/exception": "^0.2",
        "php-xapi/model": "^4.0",
        "php-xapi/repository-api": "^0.6",
        "php-xapi/repository-doctrine": "^0.6",
        "php-xapi/repository-doctrine-orm": "^0.5",
        "php-xapi/serializer": "^5.0",
        "php-xapi/symfony-serializer": "^6.0",
        "ramsey/uuid": "^4.0",
        "symfony/config": "^7.4",
        "symfony/dependency-injection": "^7.4",
        "symfony/http-foundation": "^7.4",
        "symfony/http-kernel": "^7.4"
    },
    "require-dev": {
        "php-xapi/json-test-fixtures": "^2.2",
        "php-xapi/test-fixtures": "^1.2",
        "phpspec/phpspec": "^8.0",
        "phpunit/phpunit": "^11.0",
        "rector/rector": "^2.0",
        "roave/security-advisories": "dev-latest",
        "symfony/phpunit-bridge": "^7.4",
        "symfony/var-exporter": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "XApi\\LrsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\XApi\\LrsBundle\\": "spec/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5.x-dev"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
